<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="8dp"
    >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/laporan_photo"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                </ImageView>
<LinearLayout
    android:background="#99000000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    android:orientation="horizontal"
    >
                <TextView
                    android:id="@+id/kategori_laporan"

                    android:textSize="12dp"
                    android:textColor="#ffff"
                    android:padding="5dp"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/laporan_photo" />

    <ImageView
        android:id="@+id/status_laporan"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_weight="0.1"
        android:padding="5dp"
        android:textColor="#ffff"

        app:layout_constraintBottom_toBottomOf="@+id/laporan_photo" />
</LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lokasi_laporan"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textColor="#000"
                    android:padding="5dp"

                    android:textSize="12dp" />

                <TextView
                    android:gravity="right"
                    android:id="@+id/waktu_lokasi_laporan"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:padding="5dp"
                    android:layout_gravity="right"
                    android:textColor="#000"
                    android:textSize="10dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/deskripsi_laporan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="10dp" />

        </LinearLayout>

</androidx.cardview.widget.CardView>